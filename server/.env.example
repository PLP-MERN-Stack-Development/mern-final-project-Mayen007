# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/reviwa-v2

# JWT Secret
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (Optional - for notifications)
# Gmail Setup:
# 1. Enable 2FA on your Gmail account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the app password below (not your Gmail password)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_FROM=Reviwa <your-email@gmail.com>

# Gmail SMTP Settings (defaults):
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=465        # Use 465 for SSL (recommended for production)
# EMAIL_SECURE=true     # Use true for port 465, false for port 587

# Alternative: Port 587 with TLS (if port 465 is blocked)
# EMAIL_PORT=587
# EMAIL_SECURE=false

# Custom SMTP (Alternative to Gmail):
# EMAIL_HOST=smtp.yourdomain.com
# EMAIL_PORT=587
# EMAIL_SECURE=false

# Client URL (for CORS and email links)
CLIENT_URL=http://localhost:5173
